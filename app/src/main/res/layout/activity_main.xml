<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:tools="http://schemas.android.com/tools"
                tools:context=".MainActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:background="#F1FEFF"
            android:id="@+id/header"
    >
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Producto Aqui"
                android:id="@+id/inputproducto"
                android:layout_alignParentTop="true" android:layout_centerInParent="true"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Precio Aqui"
                android:id="@+id/inputprecio"
                android:layout_below="@+id/inputproducto"
                android:layout_centerHorizontal="true"/>
                />

        <ImageView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_toRightOf="@+id/inputproducto"
                android:id="@+id/add"
                android:layout_marginLeft="7sp"
                android:src="@drawable/add_item"
                android:layout_centerVertical="true"
        />

    </RelativeLayout>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list"
            android:layout_below="@+id/header"
    />

</RelativeLayout>